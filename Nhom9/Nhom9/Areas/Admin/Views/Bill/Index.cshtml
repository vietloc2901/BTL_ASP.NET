@section Popup{
    <div class="popUp" id="popUp">
        <div class="col-12 col-cl-10">
            <div class="card card-body bg-white border-light shadow-sm mb-4">
                <h2 class="h5 mb-4">Chi tiết hóa đơn</h2>
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <div>
                                <label for="category">Mã hóa đơn</label>
                                <input class="form-control" id="billCode" type="text" value="HD001" required disabled>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div>
                                <label for="nameProduct">Tên khách hàng</label>
                                <input class="form-control" id="customerFullname" type="text" value="Bùi Văn Hà" required disabled>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <label for="color">Trạng thái đơn hàng</label><br>
                            <span class="font-weight-normal text-danger">Chưa thanh toán</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <div>
                                <label for="dateBuy">Ngày đặt</label>
                                <input class="form-control" id="dateBuy" type="text" value="20 - 04 - 2020" required disabled>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div>
                                <label for="size">Số lượng mua</label>
                                <input class="form-control" id="amount" type="text" value="20" required disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-2">
                            <div>
                                <label for="phone">Số điện thoại</label>
                                <input class="form-control" id="phone" type="text" value="0967.393.125" required disabled>
                            </div>
                        </div>
                        <div class="col-md-6 mb-2">
                            <div>
                                <label for="address">Địa chỉ nhận</label>
                                <input class="form-control" id="address" type="text" value="Trường Sơn - Lục Nam - Bắc Giang" required disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row overflow-auto mt-3 mb-3">
                        <label for="address">Danh sách sản phẩm mua</label>
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Mã sản phẩm</th>
                                    <th>Mã danh mục</th>
                                    <th>Hình ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Kích cỡ</th>
                                    <th>Màu sắc</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Item -->
                                <tr>
                                    <td>
                                        <a href="#" class="font-weight-bold">
                                            SP2541
                                        </a>
                                    </td>
                                    <td>
                                        <span class="font-weight-normal">DM002</span>
                                    </td>
                                    <td class="img">
                                        <div class="image-clothes">
                                            <img src="https://images.pexels.com/photos/4937449/pexels-photo-4937449.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="Hình ảnh" />
                                        </div>
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">Áo thời trang đỏ đô</span>
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">150.000</span>
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">10</span>
                                    </td>
                                    <td>
                                        <span class="font-weight-bold">Free size</span>
                                    </td>
                                    <td class="td-color-clothes">
                                        <span class="font-weight-bold color-clothes color-clothes-primary ">
                                        </span>
                                    </td>
                                </tr>
                                <!-- Item -->
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div>
                            <label for="note">Ghi chú</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" disabled>Sản phẩm dễ vỡ, vui lòng nhẹ tay !</textarea>
                        </div>
                    </div>


                    <div class="mt-2">
                        <div class="btn border-primary cancelPopup" id="cancelPopup">Thoát</div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section changePopup {
    <div class="changePopUp" id="changePopUp">
        <div class="col-12 col-cl-10">
            <div class="card card-body bg-white border-light shadow-sm mb-4">
                <h2 class="h5 mb-4">Chỉnh sửa hóa đơn</h2>
                <form>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div>
                                <label for="category">Mã hóa đơn</label>
                                <input class="form-control" id="billCode" type="text" value="HD001" required disabled>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div>
                                <label for="nameProduct">Tên khách hàng</label>
                                <input class="form-control" id="customerFullname" type="text" value="Bùi Văn Hà" required disabled>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <span>Trạng thái đơn hàng</span><br>
                            <input id="statusNotPaying" type="radio" name="statusPay" required checked>
                            <label for="statusNotPaying" class="font-weight-normal text-danger">Chưa thanh toán</label>
                            <br class="owl-hidden "/>
                            <input id="statusPaying" type="radio" name="statusPay" required >
                            <label for="statusPaying" class="font-weight-normal text-success">Đã Thanh toán</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div>
                                <label for="dateBuy">Ngày đặt</label>
                                <input class="form-control" id="dateBuy" type="text" value="20 - 04 - 2020" required disabled>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div>
                                <label for="size">Số lượng mua</label>
                                <input class="form-control" id="amount" type="text" value="20" required disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div>
                                <label for="phone">Số điện thoại</label>
                                <input class="form-control" id="phone" type="text" value="0967.393.125" required disabled>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div>
                                <label for="address">Địa chỉ nhận</label>
                                <input class="form-control" id="address" type="text" value="Trường Sơn - Lục Nam - Bắc Giang" required disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- <div class="col-md-6 mb-3"> -->
                        <div>
                            <label for="note">Ghi chú</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" disabled>Sản phẩm dễ vỡ, vui lòng nhẹ tay !</textarea>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-secondary">Chỉnh sửa</button>
                        <div class="btn border-primary cancelPopup" id="cancelPopup">Thoát</div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@section deletePopup {
    <div class="deletePopUp" id="deletePopUp">
        <section class="vh-lg-100 d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center form-bg-image">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="signin-inner my-3 my-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                            <h6 class="form-group mb-4 text-center fa-1x">
                                Bạn có chắc chắn muốn xóa danh mục không ?
                            </h6>
                            <div class="row d-flex flex-row">
                                <button type="submit" class="btn btn-block btn-danger">Chắc chắn</button>
                                <div class="btn btn-block border-primary cancelPopup" id="cancelPopupDel">Hủy</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script src="~/Assets/Admin/js/addPopupBill.js"></script>
}